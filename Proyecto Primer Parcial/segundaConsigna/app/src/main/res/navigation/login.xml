<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.utn.segundaconsigna.fragments.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_mainActivity2"
            app:destination="@id/mainActivity2" />
        <action
            android:id="@+id/action_loginFragment_to_register"
            app:destination="@id/register" />
    </fragment>
    <activity
        android:id="@+id/mainActivity2"
        android:name="com.utn.segundaconsigna.activities.MainActivity2"
        android:label="MainActivity2" />
    <fragment
        android:id="@+id/register"
        android:name="com.utn.segundaconsigna.fragments.Register"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register" >
        <action
            android:id="@+id/action_register_to_mainActivity2"
            app:destination="@id/mainActivity2" />
    </fragment>
</navigation>